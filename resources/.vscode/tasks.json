{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install",
            "args": ["install"]
        },
        {
            "taskName": "update",
            "args": ["update"]
        },
        {
            "taskName": "test",
            "args": ["run", "test"]
        },
        {
            "taskName": "start:ios",
            "args":[ "run", "start:ios" ]
        },
        {
            "taskName": "start:android",
            "args":[ "run", "start:android" ]
        },
        {
            "taskName": "runServer",
            "args": [ "run", "start" ]
        },
        {
            "taskName": "build",
            "args": ["run", "build"]
        },
        {
            "taskName": "compile",
            "args": ["run", "tsc"]
        },
        {
            "taskName": "hard-lint",
            "args": ["run", "lint"]
        },
        {
            "taskName": "clean",
            "args": ["run", "clean"]
        }
    ]
}